// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User{
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String    @unique 
  email     String    @unique 
  password  String  
  profile   Profile?
  comments  Comment[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Profile {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  email_news  String    @default("Yes")
  user        User      @relation(fields: [userId],references: [id])
  userId      String    @unique @db.ObjectId
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  comment     String
  user        User      @relation(fields: [userId],references: [id])
  userId      String    @db.ObjectId
  review      Review    @relation(fields: [reviewId],references: [id])
  reviewId    String    @db.ObjectId
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Review {
  id                        String            @id @default(auto()) @map("_id") @db.ObjectId
  model_release_years       ModelReleaseYear  @relation(fields: [model_release_year],references: [unique_key])
  model_release_year        String            @unique
  review                    String
  comment_review            Comment[]
  createdAt                 DateTime          @default(now())
  updatedAt                 DateTime          @updatedAt
}

model Car {
  id                  String              @id @default(auto()) @map("_id") @db.ObjectId
  manufacturer_name   Manufacturer        @relation(fields: [manufacturer],references: [manufacturer])
  manufacturer        String        
  model               String              @unique
  release_years       ModelReleaseYear[]
  image_link          String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
}

model Manufacturer{
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  manufacturer  String    @unique
  car_model     Car[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ReleaseYear{
  id            String              @id @default(auto()) @map("_id") @db.ObjectId
  release_year  String              @unique
  models        ModelReleaseYear[]
}

model ModelReleaseYear{
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  model           String      
  release_year    String      
  models          Car         @relation(fields: [model],references: [model])
  release_years   ReleaseYear @relation(fields: [release_year],references: [release_year])
  unique_key      String      @unique
  review          Review?
}


